<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<ScrollPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <AnchorPane>
         <children>
            <ImageView fx:id="_background" fitHeight="1000.0" fitWidth="1000.0" pickOnBounds="true" preserveRatio="true" />
            <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="1000.0" prefWidth="1000.0">
               <children>
                  <VBox alignment="CENTER_RIGHT" maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="1000.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#Option" styleClass="scale-btn" text="Option">
                           <font>
                              <Font size="27.0" />
                           </font>
                           <graphic>
                              <ImageView fx:id="_optionImg" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" />
                           </graphic>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets left="15.0" right="15.0" top="15.0" />
                     </VBox.margin>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <ImageView fx:id="_logo" fitHeight="300.0" fitWidth="350.0" pickOnBounds="true" preserveRatio="true" />
                        <Label text="SHIFUMI">
                           <font>
                              <Font size="66.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#Play" styleClass="scale-btn" text="JOUER">
                           <graphic>
                              <ImageView fx:id="_playImg" fitHeight="100.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
                           </graphic>
                           <font>
                              <Font size="46.0" />
                           </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#Rules" styleClass="scale-btn" text="REGLEMENT">
                           <graphic>
                              <ImageView fx:id="_ruleImg" fitHeight="100.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
                           </graphic>
                           <font>
                              <Font size="46.0" />
                           </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#Contact" styleClass="scale-btn" text="CONTACT">
                           <graphic>
                              <ImageView fx:id="_contactImg" fitHeight="100.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
                           </graphic>
                           <font>
                              <Font size="46.0" />
                           </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#Leave" styleClass="scale-btn" text="QUITTER">
                           <graphic>
                              <ImageView fx:id="_leaveImg" fitHeight="100.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
                           </graphic>
                           <font>
                              <Font size="46.0" />
                           </font>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets left="50.0" right="50.0" />
                     </VBox.margin>
                  </VBox>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </content>
</ScrollPane>
